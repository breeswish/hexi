  "properties": {
    "id": { "type": "string" },
    "text": { "type": "string" },
    "order": { "type": "integer" },
    "fromState": {
      "type": "array",
      "items": { "type": "string" }
    },
    "attitudes": {
      "type": "array",
      "items": {
